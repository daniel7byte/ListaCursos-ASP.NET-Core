@page
@model ListaCursos.Pages.CoursesModel
@{
    ViewData["Title"] = "Courses";
}

<h1>Courses</h1>

<form method="get">
    <div class="form-group">
        <div class="input-group">
            <input type="text" name="search" class="form-control" value="" asp-for="Search"/>
            <button class="btn btn-light">Buscar</button>
        </div>
    </div>
</form>

<table>
    @foreach(var course in Model.Courses)
    {
    <tr>
        <td>@course.Id</td>
        <td>@course.Name</td>
        <td>@course.Author</td>
    </tr>
    }
</table>

